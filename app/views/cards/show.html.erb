<div id='card'>
  <h2> to: <%= @card.recipient_name %></h2>
  <h2> from: <%= link_to @card.sender_name, @card.user %></h2>
  <%= image_tag @card.image_url, width: 200 %>
  <%= @card.body %>
  <div>
    <% if current_user = @card.user %>
      <%= link_to 'edit', edit_card_path(@card) %>
    <% end %>
  </div>
</div>
