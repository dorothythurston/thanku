<div id='card'>
  <h5> to: <%= card.recipient_name %></h5>
  <h5> from: <%= link_to card.sender_name, card.user %></h5>
  <%= image_tag card.image_url, width: 100 %>
  <%= card.body %>
  <div>
    <% if current_user == card.user %>
      <%= link_to 'edit', edit_card_path(card) %>
    <% end %>
  </div>
</div>
