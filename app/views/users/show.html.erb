<%if current_user == @user%>
  <h2>mine</h2>
<% else %>
  <h2><%= @user.name %>'s</h2>
<% end %>

<%if @recieved_cards.empty? %>
  <%= link_to 'send and ye shall recieve', new_card_path %>
<% else %>
  <% @recieved_cards.each do |card| %>
    <div id= 'card'>
      from: <%= link_to card.recipient_name, user_path(card.user) %>
      <%= card.body %>
      <%= image_tag card.image_url, width: 200 %>
    <% end %>
  </div>
<% end %>


